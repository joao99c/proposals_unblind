<!-- <body> -->
<nav data-turbo-permanent class="fixed z-30 w-full bg-white border-b border-gray-200 rounded dark:bg-gray-900 dark:border-gray-700">
  <div class="flex flex-wrap justify-between items-center mx-auto">
    <div class="flex divide-x">
      <%= link_to admin_deal_step_1_path(@deal), class: "p-4 flex items-center" do %>
        <%= heroicon("x", options: { class: "text-gray-500 h-8 w-8" }) %>
      <% end %>
      <div class="p-5">
        <span class="self-center whitespace-nowrap dark:text-white"><%= @deal.name %></span>
      </div>


    </div>
    <div class="flex divide-x h-16">
      <ol class="h-full px-4 space-x-2.5 flex items-center text-center">
        <li class="flex items-center text-primary-600 dark:text-primary-500 sm:after:content-[''] after:w-12 after:h-1 after:border-b after:border-blue-400 after:border-1 after:hidden sm:after:inline-block after:mx-6 xl:after:mx-10 dark:after:border-gray-700">
          <div class="flex items-center sm:block after:content-['/'] sm:after:hidden after:mx-2 after:font-light after:text-gray-200 dark:after:text-gray-500">
            <%= radio_button_tag 'cliente_e_propostas', "", true, disabled: false, class: "disabled:bg-gray-50 w-4 h-4 shrink-0" %>
            <p class="text-blue-600 text-xs font-medium">Cliente e Proposta</p>
          </div>
        </li>
        <li class="flex items-center text-primary-600 dark:text-primary-500 after:content-[''] after:w-12 after:h-1 after:border-b after:border-gray-200 after:border-1 after:hidden sm:after:inline-block after:mx-6 xl:after:mx-10 dark:after:border-gray-700">
          <div class="flex items-center sm:block after:content-['/'] sm:after:hidden after:mx-2 after:font-light after:text-gray-200 dark:after:text-gray-500">
            <%= radio_button_tag 'Design', "", true, disabled: false, class: "disabled:bg-gray-50 w-4 h-4 shrink-0" %>
            <p class="text-blue-600 text-xs font-medium">Design</p>
          </div>
        </li>
        <li class="flex items-center text-primary-600 dark:text-primary-500">
          <div class="flex items-center sm:block">
            <%= radio_button_tag 'Review', "", false, disabled: true, class: "disabled:bg-gray-50 w-4 h-4 shrink-0" %>
            <p class="text-gray-300 text-xs font-medium">Review</p>
          </div>
        </li>
      </ol>

      <div class="h-full px-4 space-x-2.5 flex items-center text-gray-900 border-l">
        <div class="p-0.5">
          <%= heroicon("device-mobile", options: {
            class: "w-7 h-7",
            "data-action": "click->editor--responsive#resize",
            "data-editor--responsive-target": "button",
            "data-breakpoint": "mobile",
            "data-title": "Mobile"
          }) %>
        </div>

        <div class="p-0.5">
          <%= heroicon("device-tablet", options: {
            class: "w-7 h-7",
            "data-action": "click->editor--responsive#resize",
            "data-editor--responsive-target": "button",
            "data-breakpoint": "tablet",
            "data-title": "Tablet"
          }) %>
        </div>

        <div class="p-0.5">
          <%= heroicon("desktop-computer", options: {
            class: "w-7 h-7",
            "data-action": "click->editor--responsive#resize",
            "data-editor--responsive-target": "button",
            "data-breakpoint": "desktop",
            "data-title": "Desktop"
          }) %>
        </div>


      </div>

      <div class="h-full px-4 space-x-2.5 flex items-center">
        <button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Finalizar</button>
      </div>
    </div>

  </div>
</nav>
<div class="flex pt-16 overflow-hidden h-full">
  <aside class="fixed top-0 left-0 z-20 flex flex-col flex-shrink-0 w-80 h-full pt-16 duration-75 transition-width border-r">
    <%= turbo_frame_tag dom_id(@deal, :sidebar),
                        src: admin_deal_editor_deal_sections_path(@deal),
                        data: {
                          action: "turbo:frame-render->editor--reorder#connect"
                        },
                        class: "relative flex flex-col flex-1 min-h-0 pt-0"
    %>
  </aside>
  <div class="fixed inset-0 z-10 hidden bg-gray-900/50 dark:bg-gray-900/90" id="sidebarBackdrop"></div>
  <div id="main-content" class="relative w-full h-full bg-gray-100 overflow-y-auto ml-80">
    <main class="h-full">
      <iframe id="<%= dom_id(@deal, :preview) %>"
              src="<%= admin_deal_editor_preview_url(@deal) %>"
              class="w-full h-full mx-auto transition-all transition-500 ease-in-out max-w-[100%]"
              data-editor--responsive-target="preview">
      </iframe>
    </main>
  </div>
</div>