<div id="<%= dom_id(deal_section) %>" class="editor--page-section-preview">
  <div id="section_2" class="hidden"></div>
  <div class="text-center">
    <section>
      <div>
        <div>
          <header>
            <span><%= deal_section.preHeading %></span>
            <h1 class=""><%= deal_section.heading %></h1>
            <span><%= deal_section.subHeading %></span>
          </header>
          <p><%= deal_section.text %>
          </p>


          <div class="flex space-x-2 justify-center">
            <% if deal_section.links.dig("twitter", "url").present? %>
              <div>
                <%= link_to "https://#{deal_section.links.dig("twitter", "url")}" do %>
                  <%= image_tag(wicked_pdf_asset_base64("icons/social_media/Twitter  - Original.svg"), class: "h-5 w-5") %>
                <% end %>
              </div>
            <% end %>

            <% if deal_section.links.dig("facebook", "url").present? %>
              <div>
                <%= link_to "https://#{deal_section.links.dig("facebook", "url")}" do %>
                  <%= image_tag(wicked_pdf_asset_base64("icons/social_media/Facebook  - Original.svg"), class: "h-5 w-5") %>
                <% end %>
              </div>
            <% end %>

            <% if deal_section.links.dig("instagram", "url").present? %>
              <div>
                <%= link_to "https://#{deal_section.links.dig("instagram", "url")}" do %>
                  <%= image_tag(wicked_pdf_asset_base64("icons/social_media/Instagram  - Original.svg"), class: "h-5 w-5") %>
                <% end %>
              </div>
            <% end %>

            <% if deal_section.links.dig("pinterest", "url").present? %>
              <div>
                <%= link_to "https://#{deal_section.links.dig("pinterest", "url")}" do %>
                  <%= image_tag(wicked_pdf_asset_base64("icons/social_media/Pinterest  - Original.svg"), class: "h-5 w-5") %>
                <% end %>
              </div>
            <% end %>

            <% if deal_section.links.dig("linkedin", "url").present? %>
              <div>
                <%= link_to "https://#{deal_section.links.dig("linkedin", "url")}" do %>
                  <%= image_tag(wicked_pdf_asset_base64("icons/social_media/LinkedIn  - Original.svg"), class: "h-5 w-5") %>
                <% end %>
              </div>
            <% end %>

            <% if deal_section.links.dig("youtube", "url").present? %>
              <div>
                <%= link_to "https://#{deal_section.links.dig("youtube", "url")}" do %>
                  <%= image_tag(wicked_pdf_asset_base64("icons/social_media/YouTube  - Original.svg"), class: "h-5 w-5") %>
                <% end %>
              </div>
            <% end %>

            <% if deal_section.links.dig("tiktok", "url").present? %>
              <div>
                <%= link_to "https://#{deal_section.links.dig("tiktok", "url")}" do %>
                  <%= image_tag(wicked_pdf_asset_base64("icons/social_media/TikTok  - Original.svg"), class: "h-5 w-5") %>
                <% end %>
              </div>
            <% end %>

            <% if deal_section.links.dig("website", "url").present? %>
              <div>
                <%= link_to "https://#{deal_section.links.dig("website", "url")}" do %>
                  <%= heroicon("globe-alt", variant: :solid, options: { class: "w-5 h-5" }) %>
                <% end %>
              </div>
            <% end %>

            <% if deal_section.links.dig("mail", "url").present? %>
              <div>
                <%= link_to "https://#{deal_section.links.dig("mail", "url")}" do %>
                  <%= heroicon("mail", variant: :solid, options: { class: "w-5 h-5" }) %>
                <% end %>
              </div>
            <% end %>
          </div>


          <div>
            <a href="<%= deal_section.button&.dig "url" %>"><%= deal_section.button&.dig "text" %></a>
            <a href="<%= deal_section.button2&.dig "url" %>"><%= deal_section.button2&.dig "text" %></a>
            <p><%= deal_section.buttonSubtext %></p>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
