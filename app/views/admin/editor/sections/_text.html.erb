<div id="<%= dom_id(deal_section) %>" class="editor--page-section-preview text-section">
  <div id="section_1" class="hidden"></div>

  <div style="background-color: <%= deal_section.background_color %>;color: <%= deal_section.text_color %>;">
    <section>
      <div>
        <div class="space-y-4">
          <%= render partial: "admin/editor/sections/shared/heading_section", locals: { deal_section: } %>
          <div class="media-alignment-<%= deal_section.contentAlignment %>">
            <div><%= deal_section.text %></div>
            <div>
              <%= render partial: "admin/editor/sections/shared/button", locals: { deal_section: } %>
              <%= render partial: "admin/editor/sections/shared/button2", locals: { deal_section: } %>
              <p><%= deal_section.buttonSubtext %></p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
