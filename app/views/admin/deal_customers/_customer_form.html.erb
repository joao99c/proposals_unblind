<%= turbo_frame_tag dom_id(deal, :customer) do %>
  <div data-controller="tabs">
    <div class="mb-4 border-b border-gray-200 dark:border-gray-700">
      <ul class="flex flex-wrap -mb-px text-sm font-medium text-center" id="myTab" data-tabs-toggle="#myTabContent" role="tablist">
        <li class="mr-2" role="presentation">
          <button data-tabs-target="tabHeader" class="inline-block p-4 rounded-t-lg border-b-2 text-blue-600 hover:text-blue-600 dark:text-blue-500 dark:hover:text-blue-500 border-blue-600 dark:border-blue-500" id="existing-customer-tab" type="button" role="tab" aria-controls="existing-customer" aria-selected="true">Choose
            an existing customer
          </button>
        </li>
        <li class="mr-2" role="presentation">
          <button data-tabs-target="tabHeader" class="inline-block p-4 rounded-t-lg border-b-2 dark:border-transparent text-gray-500 hover:text-gray-600 dark:text-gray-400 border-gray-100 hover:border-gray-300 dark:border-gray-700 dark:hover:text-gray-300" id="new-customer-tab" type="button" role="tab" aria-controls="new-customer" aria-selected="false">Create
            a new customer
          </button>
        </li>
      </ul>
    </div>
    <div id="myTabContent">
      <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-800" id="existing-customer" role="tabpanel" aria-labelledby="existing-customer-tab">
        <%= form_with model: deal, url: admin_save_deal_existing_user_path(deal), method: :post do |form| %>
          <div class="space-y-6">

            <div>
              <%= form.label :customer_id %>
              <%= form.collection_select :customer_id, Customer.all, :id, :name, prompt: 'Select the customer' %>
            </div>

            <div>
              <%= form.submit "Choose this customer", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="hidden p-4 bg-gray-50 rounded-lg dark:bg-gray-800" id="new-customer" role="tabpanel" aria-labelledby="new-customer-tab">
        <%= form_with model: deal, url: admin_save_deal_new_user_path(deal), method: :post do |form| %>
          <%= form.fields_for :customer do |customer_subform| %>
            <div class="grid gap-6 mb-6 md:grid-cols-2">

              <div>
                <%= customer_subform.label :name %>
                <%= customer_subform.text_field :name, value: "testing" %>
              </div>

              <div>
                <%= customer_subform.label :email %>
                <%= customer_subform.email_field :email, value: "testing@testing.com" %>
              </div>

              <div>
                <%= customer_subform.label :website %>
                <%= customer_subform.text_field :website, value: "testing" %>
              </div>

              <div>
                <%= customer_subform.label :responsable_name %>
                <%= customer_subform.text_field :responsable_name, value: "testing" %>
              </div>

              <div>
                <%= customer_subform.label :responsable_email %>
                <%= customer_subform.text_field :responsable_email, value: "testing" %>
              </div>

              <div>
                <%= customer_subform.label :responsable_tel %>
                <%= customer_subform.text_field :responsable_tel, value: "testing" %>
              </div>
            </div>
            <div>
              <%= customer_subform.submit "Choose this customer", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>