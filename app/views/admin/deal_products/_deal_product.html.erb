<tr id="<%= dom_id(dp, dom_id(deal)) %>" class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
  <td class="p-4 w-32">
    <div class="bg-red-500 w-14 h-14 text-white flex items-center text-center">image here</div>
  </td>
  <td class="py-4 px-6 font-semibold text-gray-900 dark:text-white">
    <%= dp.product.name %>
  </td>
  <td class="py-4 px-6">
    <div class="flex items-center space-x-3">
      <div>
        <%= dp.quantity %>
      </div>
    </div>
  </td>
  <td class="py-4 px-6 font-semibold text-gray-900 dark:text-white">
    <%= number_to_currency(dp.price) %>
  </td>
  <td class="py-4 px-6 font-semibold text-gray-900 dark:text-white">
    <%= number_to_currency(dp.discount) %>
  </td>
  <td class="py-4 px-6">
    <%= link_to "Remove", admin_destroy_deal_product_path(deal, dp_id: dp.id), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "font-medium text-red-600 dark:text-red-500 hover:underline" %>
  </td>
</tr>