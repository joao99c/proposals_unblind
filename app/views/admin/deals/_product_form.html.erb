<div class="p-6 space-y-5">
  <div class="space-y-2">
    <%= form.label :name, "Nome produto" %>
    <%= form.text_field :name, placeholder: "Inserir nome..." %>
    <%= error_message_for(form.object, :name, "Este nome de produto") %>

  </div>

  <div data-controller="char-counter" class="space-y-2">
    <div class="flex justify-between">
      <%= form.label :description, "Descrição" %>
      <p class="text-button text-neutral-400"><span data-char-counter-target="output"></span>
        <span class="text-neutral-600">/ 1000</span></p>
    </div>
    <%= form.text_area :description, placeholder: "Inserir descrição do produto ou serviço ... ", maxlength: 1000, data: { char_counter_target: "input", controller:"textarea-autosize" }, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
  </div>


  <div class="space-y-2">
    <%= form.label :image, "Imagem do produto" %>
    <%= form.file_field :image, placeholder: "Inserir image", class: "w-full" %>
  </div>

  <div class="space-y-2">
    <%= form.label :price, "Valor do produto" %>
    <%= form.text_field :price, value: "€#{number_with_precision(form.object.price, precision: 2)}", id: "price", placeholder: "Inserir valor ", data: { controller: "currency-input", type: "currency" } %>
    <%= error_message_for(form.object, :price, "Valor do produto") %>

  </div>
</div>
