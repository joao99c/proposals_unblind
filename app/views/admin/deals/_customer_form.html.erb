<div class="p-6 space-y-5">
  <div class="space-y-2">
    <%= form.label :name, "Nome empresa" %>
    <%= form.text_field :name, placeholder: "Inserir nome da empresa..." %>
    <%= error_message_for(form.object, :name, "Nome empresa") %>
  </div>

  <div class="space-y-2">
    <%= form.label :website, "Website empresa" %>
    <%= form.url_field :website, placeholder: "Inserir URL do website...", pattern: "https://.*" %>
    <%= error_message_for(form.object, :website, "Website empresa") %>
  </div>

  <div class="space-y-2">
    <%= form.label :logo, "Logo empresa" %>
    <%= form.file_field :logo, placeholder: "Inserir logo", class: "w-full" %>
    <%= error_message_for(form.object, :logo, "Logo empresa") %>
  </div>

  <div class="space-y-2">
    <%= form.label :responsable_name, "Nome do responsável" %>
    <%= form.text_field :responsable_name, placeholder: "Inserir nome..." %>
    <%= error_message_for(form.object, :responsable_name, "Nome do responsável") %>
  </div>

  <div class="space-y-2">
    <%= form.label :responsable_email, "Email do responsável" %>
    <%= form.email_field :responsable_email, placeholder: "Inserir email...", pattern: "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" %>
    <%= error_message_for(form.object, :responsable_email, "Email do responsável") %>
  </div>

  <div class="space-y-2">
    <%= form.label :responsable_tel, "Telefone do responsável" %>
    <%= form.telephone_field :responsable_tel, placeholder: "Inserir telefone..." %>
    <%= error_message_for(form.object, :responsable_tel, "Telefone do responsável") %>
  </div>
</div>