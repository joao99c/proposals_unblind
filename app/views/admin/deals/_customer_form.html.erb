<%= form_with(model: customer, url: step_1_update_customer_admin_deal_path, method: :put) do |form| %>
  <div class="p-6 space-y-5">
    <div class="space-y-2">
      <%= form.label :name,"Nome empresa" %>
      <%= form.text_field :name, placeholder: "Inserir nome da empresa..." %>
    </div>

    <div class="space-y-2">
      <%= form.label :website,"Website empresa" %>
      <%= form.text_field :website, placeholder: "Inserir URL do website..." %>
    </div>

    <div class="space-y-2">
      <%= form.label :logo,"Logo empresa" %>
      <%= form.file_field :logo, placeholder: "Inserir logo", class: "w-full" %>
    </div>

    <div class="space-y-2">
      <%= form.label :responsable_name,"Nome do responsável" %>
      <%= form.text_field :responsable_name, placeholder: "Inserir nome..." %>
    </div>

    <div class="space-y-2">
      <%= form.label :responsable_email,"Email do responsável" %>
      <%= form.text_field :responsable_email, placeholder: "Inserir email..." %>
    </div>

    <div class="space-y-2">
      <%= form.label :responsable_tel,"Telefone do responsável" %>
      <%= form.text_field :responsable_tel, placeholder: "Inserir telefone..." %>
    </div>
  </div>

  <div class="flex justify-end p-6 space-x-4 rounded-b border-t dark:border-gray-600">
  <button data-action="modal#hide" type="button" class="text-blue-600 bg-white hover:bg-blue-600 hover:text-white focus:ring-4 border border-blue-600 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
      Cancelar
      <span class="sr-only">Close modal</span>
    </button>

  <%= form.submit "Guardar" %>
  </div>
<% end %>