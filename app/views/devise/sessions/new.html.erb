<div class="p-4 md:p-10 overflow-auto h-full w-full relative">
  <nav class="px-2 sm:px-4 py-2.5 rounded dark:bg-gray-900 md:fixed">
    <div class="container flex flex-wrap justify-between items-center mx-auto">
      <a href="https://flowbite.com/" class="flex items-center">
        <img src="https://flowbite.com/docs/images/logo.svg" class="mr-3 h-6 sm:h-9" alt="Flowbite Logo"/>
        <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">Propostas</span>
      </a>
    </div>
  </nav>

  <div class="flex items-center justify-center md:h-full w-full">
    <div class="space-y-6 w-full max-w-screen-xs mx-auto">
      <div class="space-y-2">
        <h1 class="text-xl font-semibold">Bem vindo de volta!</h1>
        <h2 class="text-base font-medium">Por favor, adicione os seus detalhes.</h2>
      </div>
      <div class="space-y-2">
        <button type="button" class="text-gray-900 bg-white hover:bg-[#4285F4]/90 focus:ring-4 focus:outline-none focus:ring-[#4285F4]/50 py-3 px-5 text-base font-medium text-center rounded-lg inline-flex items-center justify-center dark:focus:ring-[#4285F4]/55 w-full">
          <svg class="mr-2 -ml-1 w-4 h-4" aria-hidden="true" focusable="false" data-prefix="fab" data-icon="google" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 488 512">
            <path fill="currentColor" d="M488 261.8C488 403.3 391.1 504 248 504 110.8 504 0 393.2 0 256S110.8 8 248 8c66.8 0 123 24.5 166.3 64.9l-67.5 64.9C258.5 52.6 94.3 116.6 94.3 256c0 86.5 69.1 156.6 153.7 156.6 98.2 0 135-70.4 140.8-106.9H248v-85.3h236.1c2.3 12.7 3.9 24.9 3.9 41.4z"></path>
          </svg>
          Login com o Google
        </button>
      </div>
      <div class="flex space-x-4 items-center">
        <div class="w-full border-b border-black h-0"></div>
        <p class="text-base font-medium">ou</p>
        <div class="w-full border-b border-black h-0"></div>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-6">
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "nome@exemplo.com" %>
          </div>

          <div class="space-y-2">
            <div class="field">
              <%= f.label :password, "Palavra-passe" %>
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "6+ caracteres" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="flex justify-between items-center text-xs font-normal text-gray-600">
                <div class="field flex items-center">
                  <%= f.check_box :remember_me, class: "mr-2" %>
                  <%= f.label :remember_me, "Guarde o meu login", class: "text-xs font-normal text-gray-600", style: "margin-bottom:0" %>
                </div>
                <div class="field">
                  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br/>
                </div>
              </div>
            <% end %>
          </div>


          <div class="space-y-2">
            <div class="actions">
              <%= f.submit "Log in", class: "dark w-full" %>
            </div>
            <div class="text-gray-600 text-xs flex space-x-2 items-center">
              <p>Ainda n√£o tem uma conta?</p>
              <p><%= link_to "Registe-se aqui.", new_registration_path(resource_name), class: "font-bold underline" %></p>
            </div>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>
