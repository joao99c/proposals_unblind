<aside data-turbo-permanent id="sidebar" class="fixed top-0 left-0 z-20 flex flex-col flex-shrink-0 hidden w-64 h-full pt-16 duration-75 lg:flex transition-width" aria-label="Sidebar">
  <div class="relative flex flex-col flex-1 min-h-0 pt-0 bg-gray-100 border-r border-gray-200 dark:bg-gray-800 dark:border-gray-700">
    <div class="flex flex-col flex-1 pt-5 pb-4 overflow-y-auto">
      <div class="flex-1 px-3 space-y-1 bg-gray-100 divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
        <ul class="pb-2 space-y-2">
          <% links = [
            { title: 'Dashboard', path: "#", icon: "chart-pie" },
            { title: 'Propostas', path: admin_deals_path, icon: "document-report" },
            { title: 'Editor', path: admin_deal_editor_url(Deal.find(50)), icon: "pencil" },
          ] %>
          <% other_section_links = [
            { title: 'Definições', path: "#", icon: "cog" },
          ] %>
          <% links.each do |link| %>
            <li>
              <%= link_to link[:path], class: "flex items-center p-2 text-base font-medium text-gray-900 rounded-lg hover:bg-gray-100 group dark:text-gray-200 dark:hover:bg-gray-700" do %>
                <%= heroicon(link[:icon], variant: :solid, options: { class: "w-6 h-6 text-gray-400 transition duration-75 group-hover:text-gray-900 dark:text-gray-400 dark:group-hover:text-white" }) %>
                <span class="ml-3" sidebar-toggle-item> <%= link[:title] %> </span>
              <% end %>
            </li>
          <% end %>
        </ul>
        <ul class="pt-4 mt-4 space-y-2 border-t border-gray-200 dark:border-gray-700">
          <% other_section_links.each do |link| %>
            <li>
              <%= link_to link[:path], class: "flex items-center p-2 text-base font-medium text-gray-900 rounded-lg hover:bg-gray-100 group dark:text-gray-200 dark:hover:bg-gray-700" do %>
                <%= heroicon(link[:icon], variant: :solid, options: { class: "w-6 h-6 text-gray-400 transition duration-75 group-hover:text-gray-900 dark:text-gray-400 dark:group-hover:text-white" }) %>
                <span class="ml-3" sidebar-toggle-item> <%= link[:title] %> </span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</aside>
<div class="fixed inset-0 z-10 hidden bg-gray-900/50 dark:bg-gray-900/90" id="sidebarBackdrop"></div>