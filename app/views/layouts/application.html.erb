</head>

<body class="bg-gray-100 dark:bg-gray-900" data-controller="sidebar dark-mode">
<!-- <body> -->
<%= render 'shared/navbar' %>
<div class="flex pt-16 overflow-hidden">
  <%= render 'shared/sidebar' %>
  <div id="main-content" class="p-9 relative w-full h-full overflow-y-auto lg:ml-64">
    <main>
      <%= yield %>
    </main>
  </div>
</div>


<script>
    document.addEventListener("turbo:load", function(event) {
        hj('stateChange', '<%=request.referer%>');
    });
